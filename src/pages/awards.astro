  document.onreadystatechange = closeLoading //当页面加载状态改变时执行 closeLoading 函数
  function closeLoading() {
    if(document.readyState == "complete") 
      setTimeout(() => {
        document.getElementById('loading-page').style.visibility="hidden";
      }, 1000); //每次加载完成后延时 1s 隐藏 loading page
    else {document.getElementById('loading-page').style.visibility="visible";}
  }
</script>
